{
  "name": "todo-backend",
  "version": "1.0.0",
  "main": "src/main.ts",
  "repository": "git@github.com:iKnowiTim/todo-backend.git",
  "author": "Tim <batr.tim@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/main.js",
    "dev": "nodemon src/main.ts",
    "lint": "eslint",
    "migration:generate": "npm run typeorm -- migration:generate --config ./ormconfig.ts -n",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:up": "npm run typeorm -- migration:run --config ./ormconfig.ts",
    "migration:down": "npm run typeorm -- migration:revert --config ./ormconfig.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/joi": "^17.2.3",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/morgan": "^1.9.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "morgan": "^1.10.0",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.45",
    "winston": "^3.8.2"
  }
}
